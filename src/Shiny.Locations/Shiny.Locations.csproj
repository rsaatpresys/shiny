<Project Sdk="Xamarin.Legacy.Sdk/0.2.0-alpha1">

    <PropertyGroup>
        <TargetFrameworks>xamarin.ios10;monoandroid12.0;net6.0-ios;net6.0-maccatalyst;net6.0-android</TargetFrameworks>
        <Description>Shiny Locations - bringing geofencing and GPS to a background service near you!</Description>
    </PropertyGroup>

    <ItemGroup>
      <Compile Include="..\LegacyHacks.cs" Link="Platforms\Shared\LegacyHacks.cs" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsIosBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Locations.Common\Shiny.Locations.Common.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(IsAndroidBuild)' == 'true'">
        <ProjectReference Include="..\Shiny.Locations.Common\Shiny.Locations.Common.csproj" />
        <PackageReference Include="Xamarin.AndroidX.Core" />
        <PackageReference Include="Xamarin.GooglePlayServices.Location" />
        <PackageReference Include="Xamarin.Build.Download" />
        <!--<PackageReference Include="Xamarin.GooglePlayServices.Base" Version="118.0.1" />
        <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="118.0.1" />
        <PackageReference Include="Xamarin.GooglePlayServices.Tasks" Version="118.0.1" />-->
    </ItemGroup>
</Project>